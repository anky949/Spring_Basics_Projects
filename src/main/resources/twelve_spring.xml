<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config></context:annotation-config>
    <!--context:annotation-config tag is used to support or enable all annotations in spring context-->



    <context:component-scan base-package="twelve_create_bean_automatically_by_component_scan"/>
    <!--context:component-scan tag is used to look for @Component annotation in the specified base package and create bean automaticaly for classes which are associated with this annotation(@Component).
    it also look for @Repository or @Controller and work as same
    -->

</beans>